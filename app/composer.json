{

  "require" : {
    "php": ">=8.2",
    "slim/slim": "^4.14",
    "slim/psr7": "^1.7",
    "ramsey/uuid": "^4.7",
    "firebase/php-jwt": "^6.10",
    "monolog/monolog": "^3.7",
    "fakerphp/faker":"^1.23",
    "php-di/php-di": "^7.0",
    "php-di/slim-bridge": "^3.4",
    "respect/validation": "^2.3.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11",
    "pestphp/pest": "^3.7",
    "spatie/phpunit-watcher": "^1.24"
  },
  "autoload": {
    "psr-4" : {
      "jira\\api\\" : "./src/api",
        "jira\\core\\" : "./src/core",
        "jira\\infra\\" : "./src/infrastructure",
        "jira\\tests\\" : "./tests"
    }
